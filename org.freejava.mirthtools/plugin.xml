<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension point="org.eclipse.ui.commands">
      <category
            name="MirthConnect Tools Category"
            id="org.freejava.mirthtools.category">
      </category>
      <command
            categoryId="org.freejava.mirthtools.category"
            id="org.freejava.mirthtools.exportAllChannelsHandlerCommand"
            name="Download All Channels">
      </command>
      <command
            categoryId="org.freejava.mirthtools.category"
            id="org.freejava.mirthtools.exportSelectedChannelsHandlerCommand"
            name="Download Selected Channels">
      </command>
      <command
            categoryId="org.freejava.mirthtools.category"
            id="org.freejava.mirthtools.importSelectedChannelsHandlerCommand"
            name="Upload Selected Channels">
      </command>
   </extension>

   <extension point="org.eclipse.ui.handlers">
      <handler class="org.freejava.mirthtools.ExportAllChannelsHandler"
            commandId="org.freejava.mirthtools.exportAllChannelsHandlerCommand">
      </handler>
      <handler class="org.freejava.mirthtools.ExportSelectedChannelsHandler"
            commandId="org.freejava.mirthtools.exportSelectedChannelsHandlerCommand">
      </handler>
      <handler class="org.freejava.mirthtools.ImportSelectedChannelsHandler"
            commandId="org.freejava.mirthtools.importSelectedChannelsHandlerCommand">
      </handler>
   </extension>

   <extension point="org.eclipse.ui.menus">
       <menuContribution locationURI="popup:org.eclipse.ui.popup.any?after=additions" >
        <menu label="Mirth Connect Tools">
            <visibleWhen>
              <with variable="activeMenuSelection">
                <iterate>
                  <adapt type="org.eclipse.core.resources.IResource" />
                </iterate>
              </with>
            </visibleWhen>
            <command commandId="org.freejava.mirthtools.exportAllChannelsHandlerCommand"/>
            <command commandId="org.freejava.mirthtools.exportSelectedChannelsHandlerCommand"/>
            <command commandId="org.freejava.mirthtools.importSelectedChannelsHandlerCommand"/>
           </menu>
       </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="org.freejava.mirthtools.ResourceChangeListener">
      </startup>
   </extension>

</plugin>
