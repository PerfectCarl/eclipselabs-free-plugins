      <url>http://repository.springsource.com/maven/bundles/external</url>
    </repository>
    <repository>
      <id> appengine-local-runtime-1.6.0 repo</id>
      <url>http://maven.seasar.org/maven2</url>
    </repository>

  </repositories>

</project>
